# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# Rust files
[*.rs]
indent_style = space
indent_size = 4
max_line_length = 120

# TOML files
[*.toml]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# Shell scripts
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2

# Matrix language files
[*.matrix]
indent_style = space
indent_size = 2

# Lock files should not be edited
[{package-lock.json,Cargo.lock}]
insert_final_newline = false
